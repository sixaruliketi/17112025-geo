<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/candidateAvatar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/candidateName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="name"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/candidateAvatar"
        app:layout_constraintStart_toStartOf="@+id/candidateAvatar"
        app:layout_constraintTop_toBottomOf="@+id/candidateAvatar" />

    <TextView
        android:id="@+id/candidateDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="details about candidate"
        android:textSize="21sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/candidateName"
        app:layout_constraintStart_toStartOf="@+id/candidateName"
        app:layout_constraintTop_toBottomOf="@+id/candidateName" />

</androidx.constraintlayout.widget.ConstraintLayout>